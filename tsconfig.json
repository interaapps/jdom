{
  "allowJs": true,

  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES5",
    "declaration": true,
    "outDir": "./types",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "emitDeclarationOnly": true,

    "paths": {
      "jdomjs/*": ["src/jdomjs/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "types/**/*.d.ts"
  ]
}